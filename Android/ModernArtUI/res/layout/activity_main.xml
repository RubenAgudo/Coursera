<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="org.coursera.ragudo.modernartui.MainActivity" >
    
    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true" />

    <View
        android:id="@+id/holo_blue_dark_rectangle"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/holo_blue_dark" />

    <View
        android:id="@+id/holo_blue_bright_rectangle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/seekBar"
        android:layout_alignLeft="@+id/seekBar"
        android:layout_alignRight="@+id/black_rectangle"
        android:layout_below="@+id/black_rectangle"
        android:background="@android:color/holo_blue_bright" />

    <View
        android:id="@+id/darker_gray_rectangle"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_above="@+id/seekBar"
        android:layout_alignRight="@+id/seekBar"
        android:layout_alignTop="@+id/holo_blue_bright_rectangle"
        android:layout_toRightOf="@+id/holo_blue_bright_rectangle"
        android:background="@android:color/darker_gray" />

    <View
        android:id="@+id/black_rectangle"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@+id/holo_blue_dark_rectangle"
        android:layout_marginTop="29dp"
        android:layout_toRightOf="@+id/holo_blue_dark_rectangle"
        android:background="@android:color/black" />

    <View
        android:id="@+id/holo_green_dark_rectangle"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignRight="@+id/darker_gray_rectangle"
        android:layout_alignTop="@+id/darker_gray_rectangle"
        android:layout_marginRight="18dp"
        android:layout_marginTop="56dp"
        android:background="@android:color/holo_green_dark"
        android:rotation="170" />

    <View
        android:id="@+id/holo_orange_dark_rectangle"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignBottom="@+id/black_rectangle"
        android:layout_alignLeft="@+id/darker_gray_rectangle"
        android:layout_alignRight="@+id/darker_gray_rectangle"
        android:layout_alignTop="@+id/holo_blue_dark_rectangle"
        android:background="@android:color/holo_orange_dark" />

    <View
        android:id="@+id/white_rectangle"
        android:layout_width="48dp"
        android:layout_height="96dp"
        android:layout_alignTop="@+id/black_rectangle"
        android:layout_marginTop="69dp"
        android:layout_toLeftOf="@+id/holo_green_dark_rectangle"
        android:background="@android:color/white" />

</RelativeLayout>
